{
  "baseURL": "{{ .Site.BaseURL }}",
  "languageCode": "{{ .Site.LanguageCode }}",
  "title": "{{ .Site.Title }}",
  "posts": [
    {{ range $index, $page := .Site.RegularPages }}
    {{ if $index }},{{ end }}
    {
      "title": "{{ $page.Title }}",
      "permalink": "{{ $page.Permalink }}",
      "summary": "{{ $page.Summary | plainify }}"
    }
    {{ end }}
  ]
}
